<section id="slider">
    <div class="owl-carousel owl-theme">


        @foreach (var item in Model.Sliders)
        {
            <div class="item"><img src="~/UploadsSlider/@item.Image" class="img-fluid" alt="..."></div>
        }

    </div>
</section>



<section id="blog">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 title">
                <h3>
                    Xeberler
                </h3>
                <p>

                </p>
                <div class="dot1">
                </div>
                <div class="dot1">
                </div>
                <div class="dot1">
                </div>
            </div>
            <div class="row" style="margin-left: 3px;">
                @{ int t = 0;

                    foreach (var item in Model.Blogs)
                    {
                        if (t < 4)
                        {
                            <div class="col-lg-3 col-md-6 cardd">
                                <div class="card">
                                    <img src="~/UploadsBlog/@item.Image" class="card-img-top " alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            @(item.Title.Length>35? item.Title.Substring(0,35)+"...":item.Title)
                                        </h5>
                                        <p class="card-text">
                                            @(item.Content.Length>200? item.Content.Substring(0,200)+"...":item.Content)
                                        </p>
                                        <a asp-action="BlogDetails" asp-controller="blog" asp-route-id="@item.Id">Etrafli</a>
                                        <div class="date">
                                            @item.Date.ToString("MMMM d")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            t++;
                        }
                    }
                }

            </div>

        </div>
    </div>
</section>



<section id="total">
    <div class="container">
        <div class="row">
            @{ int y = 0;

                @foreach (var item in Model.Totals)
                {
                    if (y < 3)
                    {
                        <div class="col-md-4">
                            <div class="borderr">
                                @*<img src="~/Uploads/@item.Icon" alt="">*@
                                <i class="@item.Icon"></i>
                                <h4>
                                    <div class="timer" data-from="0" data-to="@item.Numeral" data-speed="5000" data-refresh-interval="50"></div>+

                                </h4>
                                <h3>
                                    @item.Name
                                </h3>
                            </div>
                        </div>
                        y++;
                    }

                }
            }



        </div>
    </div>
</section>

