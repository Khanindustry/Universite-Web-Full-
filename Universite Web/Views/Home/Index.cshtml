<section id="video">
    <div class="forvideo" @*style="background-image: url('../../wwwroot/Uploads/@Model.UniverstyVideo.BackImg');*@>
        <div class="container">
            <div class="row forcenter">
                <div class="col-lg-12">
                    <div class="inside_video">
                        <h4>Watch Our Univercity Video</h4>
                        <a data-bs-toggle="modal" data-bs-target="#VmModal" href="">
                            <i class="fas fa-play"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- video modal -->

<div class="video-modal">
    <div class="modal" style="top: 250px;" id="VmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-header">
                <button type="button" class="btn-close bg-light" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-content">
                <iframe height="315" src="@Model.UniverstyVideo.Link" title="YouTube video player"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>


