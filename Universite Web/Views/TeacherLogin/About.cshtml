@model Universite_Web.Models.CustomUser
@inject IHttpContextAccessor _httpContext
@inject UserManager<IdentityUser> _userManager

@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/assets/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
            crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-controller="home" asp-action="index"><img class="img-fluid" src="/img/Безымянный.png" alt=""></a>

        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar-->
        <ul class="navbar-nav d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                   aria-expanded="false">
                    @Model.Surname @Model.Name
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li> <a asp-controller="UserLogin" asp-action="ChangePassword" class="btn btn-success waves-effect waves-light dropdown-item" id="pwd-change"><i class="mdi mdi-account-settings-variant m-r-5"></i>Şifrəni Redaktə et</a> </li>
                   
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" asp-controller="teacherlogin" asp-action="LogOut">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-controller="TeacherLogin" asp-action="about">
                            <div class="sb-nav-link-icon"> <i class="fas fa-address-card"></i> </div>
                            Sexsi melumat
                        </a>

                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                           data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Fenler
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne"
                             data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                @*@await Component.InvokeAsync("VcFenn")*@
                            </nav>
                        </div>
                    </div>

                </div>

            </nav>
        </div>


        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid profile px-5">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- meta -->
                            <div class="profile-user-box">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="">
                                            <h4 style="padding-top: 15px;" class="mt-5 m-b-5 font-18 ellipsis"></h4>
                                            <p class="font-13">Muellim</p>

                                            <p class="text-muted m-b-0">@Model.Name</p>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        <div style="padding-top: 65px;">
                                            <a asp-controller="UserLogin" asp-action="ChangePassword" class="btn btn-success waves-effect waves-light" id="pwd-change"><i class="mdi mdi-account-settings-variant m-r-5"></i>Şifrəni Redaktə et</a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/ meta -->
                        </div>
                    </div>
                </div>

                <div class="container-fluid px-4">
                    <div class="row m-t-30 mt-4">
                        <div class="col-sm-12">
                            <div class="card p-0">
                                <div class="card-body p-0">
                                    <ul class="nav nav-tabs profile-tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-toggle="tab"
                                               href="#aboutme">Tələbə haqqında məlumat</a>

                                        </li>
                                    </ul>
                                    <div class="tab-content m-0 p-4">
                                        <div id="aboutme" class="tab-pane active">
                                            <div class="profile-desk">
                                                <table class="table table-condensed">
                                                    <tbody>
                                                        <tr>
                                                            <td><b>Soyadı</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Surname
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Adı</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Name
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <td><b>Atasının adı</b></td>
                                                            <td class="ng-binding">
                                                                @Model.AtaAdi
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Şəxsiyyət vəsiqəsinin seriya və nömrəsi</b></td>
                                                            <td class="ng-binding">
                                                                @Model.PassportNumber
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Cinsi</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Gender
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Ünvanı</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Adress
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Telefon</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Phone
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Təhsil növü</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Money
                                                            </td>
                                                        </tr>
                                                        
                                                        <tr>
                                                            <td><b>Fenn</b></td>
                                                            <td class="ng-binding">
                                                                @Model.Subject.Name
                                                            </td>
                                                        </tr>
                                                       
                                                        <tr>
                                                            <td><b>Doğum tarixi</b></td>
                                                            <td class="ng-binding">
                                                                @Model.DateOfBirth
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div> <!-- end profile-desk -->
                                        </div> <!-- about-me -->

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2021</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets/js/datatables-simple-demo.js"></script>
</body>

</html>
